&
  position: relative
  width: 100%
  background: #F9F9F9
  lost-align: center

.content-container
  display: flex
  flex-direction: column
  lost-align: center
  margin: 5em 0

  +above(600px)
    margin: 10em 0

.fruit-container
  width: 95%

  +above(600px)
    lost-align: center
    opacity: 0
    height: 100%
    width: 70%

  img
    width: 100%
    height: 100%
    object-fit: contain

.scale-container
  width: 20%

  +above(600px)
    lost-align: center
    color: dope-black
    height: 100%
    width: 10%

  img
    width: 100%
    height: 100%
    object-fit: contain

.scroll-indicator
  color: dope-black

.typewriter-container
  color: dope-black
  max-width: 15em
  text-align: center
  text-transform: uppercase
  min-height: 2em
  margin: 1em 0
  // border: 1px solid red
  font-size: 3em

  +below(700px)
    font-size: 2em
  +below(500px)
    font-size: 1.5em
