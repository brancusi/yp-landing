&
  position: relative
  width: 100%
  background: #F7D2D2

.content
  display: flex
  flex-direction: column
  color: dope-black
  justify-content: space-around
  // margin-bottom: 5em

  +above(600px)
    flex-direction: row

.copy-container
  lost-align: center
  display: flex
  flex-direction: column
  margin-top: 5em
  padding: 2em

  span
    text-transform: uppercase
    font-size: responsive 30px 50px
    font-range: 420px 1280px

  +above(600px)
    lost-column: 3/6

.phone-container
  lost-align: center

  img
    width: 80%
    object-fit: contain

  +above(600px)
    margin-top: 5em
    lost-column: 1/3
    lost-align: center

    img
      width: 80%

.solution-image-container
  opacity: 0
  margin-bottom: 2em

  img
    width: 70%
    height: 100%
    object-fit: contain

  +below(600px)
    lost-align: center
    img
      width: 90%
