& {
  position: relative;
  height: 100vh;
  width: 100%;
  background: #F7D2D2;
}

.content {
  height: 100%;
  font-weight: 500;
  color: #323232;
}

.copy {
  span {
    opacity: 0;
    margin-left: -2em;
    margin-right: 2em;
    text-transform: uppercase;
    font-size: 2em;
    margin-top: 2em;
  }
}

.image-container {
  opacity: 0;
  img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
}


.solution-image-container {
  opacity: 0;
  margin-top: 8em;
  padding-right: 10em;
  img {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }
}
