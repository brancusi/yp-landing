&
  cursor: pointer
  padding: 0.5em 1em
  display: flex
  align-items: center

&.disabled
  cursor: not-allowed

.button-label
  margin-right: 0.25em

.spin-container
  i
    animation: 1s infinite spin
    animation-timing-function: linear

@keyframes spin {
  from {
    transform: rotate(0deg)
  }
  to {
    transform: rotate(360deg)
  }
}
